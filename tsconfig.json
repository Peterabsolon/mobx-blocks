{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build/types",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "strict": true
  },
  "include": ["src/lib"],
  "exclude": ["src/lib/**/tests"]
}
